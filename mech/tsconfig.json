{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"target": "ES2022",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "declarationMap": true
	},
	"include": ["./src/**/*"]
}
