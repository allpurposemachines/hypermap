{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"lib": ["ES2022", "DOM"],
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist/types",
		"declarationMap": true
	},
	"include": ["./index.js", "./src/**/*"]
}
